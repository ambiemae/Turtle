import turtle

windowcolor = input("window color: ")
tesscolor = input("tess color: ")
tesspensize = input("tess pensize: ")

# Set up window

window = turtle.Screen()
window.bgcolor(windowcolor)

# Set up turtle

tess = turtle.Turtle()
tess.color(tesscolor)
tess.pensize(tesspensize)

# Draw things

tess.forward(50)
tess.left(120)
tess.forward(50)

